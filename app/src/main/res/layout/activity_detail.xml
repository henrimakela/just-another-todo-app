<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="item" type="com.henri.yearlylist.data.room.Item"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:animateLayoutChanges="true"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailActivity">

        <TextView
                android:text="@{item.title}"
                android:textColor="@color/mainTextColor"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/detail_title_txt" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.13"
                android:textAlignment="center"/>
        <TextView
                android:text="@{item.description}"
                android:textSize="20sp"
                android:textColor="@color/mainTextColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/detail_description_txt" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginTop="71dp" app:layout_constraintTop_toBottomOf="@+id/detail_title_txt"
                android:textAlignment="center"/>
        <Button
                android:text="@string/mark_item_done"
                android:background="@drawable/button_bg"
                android:textColor="@color/mainTextColor"
                android:padding="20dp"
                android:onClick="markItemDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_done_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.57"/>
        <ImageView
                android:visibility="@{item.done ? View.VISIBLE : View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/done"
                android:id="@+id/detail_activity_item_done" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"/>
        <TextView
                android:text="@string/item_done"
                android:textSize="15sp"
                android:visibility="@{item.done ? View.VISIBLE : View.GONE}"
                android:textColor="@color/mainTextColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="150dp" android:layout_marginStart="150dp" android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_activity_item_done"
                app:layout_constraintVertical_bias="0.100000024"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>